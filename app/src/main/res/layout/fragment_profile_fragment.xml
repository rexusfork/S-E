<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.profile_fragment">

    <TextView
        android:id="@+id/TextHistory"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="36sp"
        android:fontFamily="@font/poppins"
        android:gravity="center">
    </TextView>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profileuser">
    </ImageView>

    <TextView
        android:id="@+id/TextNameProfile"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dias Perdana Putra"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        android:gravity="center">
    </TextView>

    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"
            android:layout_marginRight="20dp">
        </ImageView>

        <TextView
            android:id="@+id/TextEmailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rexusfork@gmail.com"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/TextBalance"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$ 17"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        android:gravity="center">
    </TextView>

    <Button
        android:id="@+id/BtnLanguage"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="Language"
        android:fontFamily="@font/poppins"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/BtnAboutUs"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="About us"
        android:fontFamily="@font/poppins"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/BtnLoginReport"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="Report"
        android:fontFamily="@font/poppins"
        android:textStyle="bold">
    </Button>

    <Button
        android:id="@+id/BtnLogout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:text="Logout"
        android:fontFamily="@font/poppins"
        android:textStyle="bold">
    </Button>
</LinearLayout>